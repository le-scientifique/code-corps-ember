{{#each project.donationGoals as |donationGoal|}}
  {{#if donationGoal.isEditing}}
    {{donation-goal-edit
      amount=donationGoal.amount
      canCancel=hasExistingDonationGoals
      description=donationGoal.description
      isNew=donationGoal.isNew
      save=(action 'save' donationGoal)
      cancel=(action 'cancel' donationGoal)}}
  {{else}}
    {{donation-goal
      donationGoal=donationGoal
      edit=(action 'edit' donationGoal)}}
  {{/if}}
{{/each}}
{{#if hasExistingDonationGoals}}
  <button class="add" {{action 'add' project}}>Add Another Goal</button>
{{/if}}
